rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    
    // 예: users/{userId}/childhood/{docId}, users/{userId}/experience/{docId}, ...
    match /users/{userId}/{page}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // users/{userId} 문서 자체에 접근하는 경우 (선택 사항)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{uid}/experience/{expId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    match /users/{uid}/experience/{expId}/media/{mediaId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    match /users/{userId}/lifestory/{storyId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
